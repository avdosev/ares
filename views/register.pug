doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible', content='ie=edge')
  title registration
  style
    include ../public/css/style.css
    include ../public/css/input.css
  script
    include ../public/js/register_validator.js


body
  include modules/header 

  .inputForm
    form.reg(action="/register", method="post", name="register" novalidate)
      p Email
      input#email(type='email', name='email', placeholder='Type email', required='required', pattern='.+@.+')
      <span class="emailError" aria-live="polite"></span>
      .message #{message}
      p Login
      input#login(type='login', name='login', placeholder='Type login', required='required', pattern='^\\w{3,20}$')
      <span class="loginError" aria-live="polite"></span>
      p Password
      input#password(type='password', name='password', placeholder='Type password', required='required', pattern='.{5,50}')
      <span class="passwordError" aria-live="polite"></span>
      p Retype password
      input#repassword(type="password" name='repassword', placeholder="Retype password" required )
      <span class="repasswordError" aria-live="polite"></span>
      input#submit(type="submit" value="OK")

